<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/backBtn"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_margin="10sp"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/ic_baseline_arrow_back_ios_24" />
        <TextView
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#9C000000"
            android:textStyle="bold"
            android:text="회원가입"/>
        <Button
            android:id="@+id/closeBtn"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_margin="10sp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/ic_baseline_close_24" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5sp"
        android:background="#3B3840" />

    <EditText
        android:layout_marginTop="200sp"
        android:id="@+id/emailEditText"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="5sp"
        android:ems="15"
        android:hint=" 카카오계정 (이메일)"
        android:inputType="textEmailAddress" />
    <View
        android:layout_width="310sp"
        android:layout_height="0.3sp"
        android:layout_gravity="center_horizontal"
        android:background="#6F3B3840" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="5sp"
        android:background="#ffffff"
        android:ems="15"
        android:hint=" 비밀번호"
        android:inputType="textPassword" />
    <View
        android:layout_width="310sp"
        android:layout_height="0.3sp"
        android:layout_gravity="center_horizontal"
        android:background="#6F3B3840" />
    <EditText
        android:id="@+id/passwordCheckEditText"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="5sp"
        android:background="#ffffff"
        android:ems="15"
        android:hint=" 비밀번호"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="325sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13sp"
        android:layout_gravity="center_horizontal"
        android:background="#FEE500"
        android:textStyle="bold"
        android:textColor="#5D6FD5"
        android:text="회원가입" />

</LinearLayout>