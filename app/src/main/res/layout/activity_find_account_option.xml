<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FindAccountOption">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/backBtn"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_margin="10sp"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/ic_baseline_arrow_back_ios_24" />
        <TextView
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#9C000000"
            android:textStyle="bold"
            android:text="카카오 계정 찾기"/>
        <Button
            android:id="@+id/closeBtn"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_margin="10sp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/ic_baseline_close_24" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5sp"
        android:background="#3B3840" />
    <TextView
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="50sp"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#C9000000"
        android:text="카카오 계정을 찾을 방법을 선택해주세요."/>
    <View
        android:layout_width="400sp"
        android:layout_height="0.5sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5sp"
        android:background="#3B3840" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#D7000000"
                android:text="전화 번호로 찾기"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="70sp"
                android:text="카카오 서비스에 등록한 전화번호로 비밀번호 찾기"/>
        </LinearLayout>
        <Button
            android:id="@+id/usingPhoneBtn"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_baseline_chevron_right_24"/>
    </LinearLayout>
    <View
        android:layout_width="400sp"
        android:layout_height="0.5sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:background="#3B3840" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#D7000000"
                android:text="이메일로 찾기"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="70sp"
                android:text="카카오 서비스에 등록한 이메일로 비밀번호 찾기"/>
        </LinearLayout>
        <Button
            android:id="@+id/usingEmailBtn"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="11sp"
            android:background="@drawable/ic_baseline_chevron_right_24"/>
    </LinearLayout>
    <View
        android:layout_width="400sp"
        android:layout_height="0.5sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:background="#3B3840" />
</LinearLayout>